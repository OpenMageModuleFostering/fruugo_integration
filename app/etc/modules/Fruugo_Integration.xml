<config>
    <modules>
        <Fruugo_Integration>
	        <active>true</active>
	        <codePool>community</codePool>
            <depends>
                <Mage_Adminhtml/>
                <Mage_Sales />
            </depends>
        </Fruugo_Integration>
    </modules>
    <global>
         <models>
            <Fruugo_Integration>
                 <class>Fruugo_Integration_Model_Observer</class>
            </Fruugo_Integration>
        </models>
        <events>
            <sales_order_save_before>
                <observers>
                    <Fruugo_Integration_Model_Observer>
                        <type>singleton</type>
                        <class>Fruugo_Integration_Model_Observer</class>
                        <method>beforeSaveOrder</method>
                    </Fruugo_Integration_Model_Observer>
                </observers>
            </sales_order_save_before>
            <sales_order_invoice_pay>
                <observers>
                    <Fruugo_Integration_Model_Observer>
                        <type>singleton</type>
                        <class>Fruugo_Integration_Model_Observer</class>
                        <method>orderInvoiced</method>
                    </Fruugo_Integration_Model_Observer>
                </observers>
            </sales_order_invoice_pay>
            <sales_order_item_cancel>
                <observers>
                    <Fruugo_Integration_Model_Observer>
                        <type>singleton</type>
                        <class>Fruugo_Integration_Model_Observer</class>
                        <method>orderCancelled</method>
                    </Fruugo_Integration_Model_Observer>
                </observers>
            </sales_order_item_cancel>
            <sales_order_shipment_save_after>
                <observers>
                    <Fruugo_Integration_Model_Observer>
                        <type>singleton</type>
                        <class>Fruugo_Integration_Model_Observer</class>
                        <method>orderShipment</method>
                    </Fruugo_Integration_Model_Observer>
                </observers>
            </sales_order_shipment_save_after>
            <sales_order_payment_refund>
                <observers>
                    <Fruugo_Integration_Model_Observer>
                        <type>singleton</type>
                        <class>Fruugo_Integration_Model_Observer</class>
                        <method>orderRefunded</method>
                    </Fruugo_Integration_Model_Observer>
                </observers>
            </sales_order_payment_refund>
        </events>
    </global>
</config>